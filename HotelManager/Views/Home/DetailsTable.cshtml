@model HotelManager.ViewModels.BillingViewModels

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPopupWindow.cshtml";
}

@Html.Partial("_Edit", Model)


<script>
    $(document).ready(function () {

        $("input").each(function (index, element) {
            var widgetObject = kendo.widgetInstance($(element), kendo.ui);
            if (typeof widgetObject != 'undefined')
                widgetObject.enable(false);
            document.getElementById("BillingMaster_IsPaidByATMCard").disabled = true;
        });
    });
</script>

<style type="text/css">
    .edit-controls {
        display: none;
    }

    .form-right {
        margin-top: 23px;
    }

    .detail-controls {
        clear: both;
    }

    .div-main {
        margin-top: 15px;
        overflow: auto;
        max-height: 550px;
        height: 550px;
        width: 740px;
    }
</style>

<link href="@Url.Content("~/Content/CustomCss/PopupTable.css")" rel="stylesheet" type="text/css" />

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}